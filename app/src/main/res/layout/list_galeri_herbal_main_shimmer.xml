<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/btnObatHerbal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="14dp"
        app:cardCornerRadius="8dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivObatHerbal"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@color/abuabu_tua"/>
            <TextView
                android:id="@+id/tvJudulObatHerbal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivObatHerbal"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:text="Obat Herbal Dari sebuah"
                android:textColor="@color/abuabu_tua"
                android:textSize="14sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:background="@color/abuabu_tua"/>

            <TextView
                android:id="@+id/tvDeskripsiObatHerbal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivObatHerbal"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:text="Halaman Ini Berisi Informasi Tentang Obat Herbal Dari Tumbuh-"
                android:textSize="12sp"
                android:textColor="@color/abuabu_tua"
                android:textStyle="normal"
                android:maxLines="2"
                android:ellipsize="end"
                android:background="@color/abuabu_tua"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>